   // Varsayılan ve kayıt-getir fonksiyonu
   function hk_dost_siteler_get_ayarlar() {
       $defaults = [
               'satir'      => 1,
                       'sutun'      => 1,
                               'linkler'    => [],
                                       'aktif'      => 1,
                                               'baslik'     => 'Dost Siteler',
                                                       'arka_plan'  => '#f5f7fa',
                                                               'pozisyon'   => 'right', // right, left, bottom, right-middle, left-middle
                                                                   ];
                                                                       $options = get_option('hk_dost_siteler_opts', []);
                                                                           return wp_parse_args(is_array($options) ? $options : [], $defaults);
                                                                           }

                                                                           // ADMIN PANELİ
                                                                           function hobi_dost_siteler_admin_page() {
                                                                               // PANEL DURUMU GÜNCELLE
                                                                                   if (isset($_POST['hk_dost_panel_toggle'])) {
                                                                                           update_option('hk_dost_siteler_opts', array_merge(hk_dost_siteler_get_ayarlar(), [
                                                                                                       'aktif' => ($_POST['hk_dost_panel_toggle']=='1' ? 1 : 0)
                                                                                                               ]));
                                                                                                                       echo '<div class="updated"><p>Panel durumu kaydedildi!</p></div>';
                                                                                                                           }

                                                                                                                               // KAYDET
                                                                                                                                   if (isset($_POST['hk_dost_save'])) {
                                                                                                                                           $satir  = max(1, intval($_POST['satir'] ?? 1));
                                                                                                                                                   $sutun  = max(1, intval($_POST['sutun'] ?? 1));
                                                                                                                                                           $baslik = sanitize_text_field($_POST['baslik'] ?? '');
                                                                                                                                                                   $arka_plan = sanitize_hex_color($_POST['arka_plan'] ?? '');
                                                                                                                                                                           $aktif  = intval($_POST['aktif'] ?? 1);
                                                                                                                                                                                   $pozisyonlar = ['right','left','bottom','right-middle','left-middle'];
                                                                                                                                                                                           $pozisyon = in_array($_POST['pozisyon'], $pozisyonlar) ? $_POST['pozisyon'] : 'right';
                                                                                                                                                                                                   $linkler = [];
                                                                                                                                                                                                           if (isset($_POST['site_link']) && is_array($_POST['site_link'])) {
                                                                                                                                                                                                                       foreach ($_POST['site_link'] as $i => $link) {
                                                                                                                                                                                                                                       $link = trim($link);
                                                                                                                                                                                                                                                       if ($link !== '') {
                                                                                                                                                                                                                                                                           if (!preg_match('/^https?:\/\//', $link)) $link = 'https://' . $link;
                                                                                                                                                                                                                                                                                               $linkler[] = esc_url_raw($link);
                                                                                                                                                                                                                                                                                                               } else {
                                                                                                                                                                                                                                                                                                                                   $linkler[] = '';
                                                                                                                                                                                                                                                                                                                                                   }
                                                                                                                                                                                                                                                                                                                                                               }
                                                                                                                                                                                                                                                                                                                                                                       }
                                                                                                                                                                                                                                                                                                                                                                               update_option('hk_dost_siteler_opts', [
                                                                                                                                                                                                                                                                                                                                                                                           'satir' => $satir,
                                                                                                                                                                                                                                                                                                                                                                                                       'sutun' => $sutun,
                                                                                                                                                                                                                                                                                                                                                                                                                   'baslik'=> $baslik,
                                                                                                                                                                                                                                                                                                                                                                                                                               'arka_plan' => $arka_plan,
                                                                                                                                                                                                                                                                                                                                                                                                                                           'aktif' => $aktif,
                                                                                                                                                                                                                                                                                                                                                                                                                                                       'pozisyon' => $pozisyon,
                                                                                                                                                                                                                                                                                                                                                                                                                                                                   'linkler'=> $linkler
                                                                                                                                                                                                                                                                                                                                                                                                                                                                           ]);
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   echo '<div class="updated"><p>Kaydedildi!</p></div>';
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       }

                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           // AYARLARI GETİR
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               $o = hk_dost_siteler_get_ayarlar();
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   $n = $o['satir'] * $o['sutun'];

                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       ?>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           <div class="wrap">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   <h1>Dost Siteler Ayarları</h1>

                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           <!-- Panel Durumu: Modern Aktif/Pasif Düğmesi -->
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   <form method="post" style="margin-bottom:25px;">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               <div style="display:flex;align-items:center;gap:14px;">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               <span style="font-size:15px;color:#555;font-weight:500;min-width:108px;">Panel Durumu:</span>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               <input type="hidden" name="hk_dost_panel_toggle" value="<?php echo $o['aktif'] ? '0':'1'; ?>">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               <button type="submit"
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   style="background:<?php echo $o['aktif'] ? '#18b65b' : '#e74c3c'; ?>;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           color:#fff;padding:8px 24px 8px 18px;border-radius:22px;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   font-size:1.12em;font-weight:600;border:none;cursor:pointer;transition:0.17s;">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       <?php if($o['aktif']): ?>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               <span style="display:inline-block;width:15px;height:15px;background:#fff;border-radius:50%;vertical-align:middle;margin-right:7px;border:2px solid #0a7b2c;"></span>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                       Şu an Aktif
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           <?php else: ?>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   <span style="display:inline-block;width:15px;height:15px;background:#fff;border-radius:50%;vertical-align:middle;margin-right:7px;border:2px solid #9c2222;"></span>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           Şu an Pasif
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               <?php endif; ?>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               </button>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           </div>
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                   </form>

